	
<section id="contact" class="loginformimg bottomleft trans contact section-bg">
    <div class="container">
        <div class="section-title">
          <h2>Learn More</h2>
          <p> We will get back to you as soon as possible </p>
	</div>


        <div class="form-group row bottomleft trans ">

          <div class="col-lg-6 col-lg-offset-5">
              
	    <%= form_with model: @visitor, class: "bottomleft trans  php-email-form contact-form-wrap" ,url: signup_path do |form| %>

              <div class="mb-3">
                <% if (@visitor != nil && @visitor.errors.any?)  %>
                  <div class="alert alert-danger">
                     <% @visitor.errors.full_messages.each do |message| %>
                       <div>  <%= message %> </div>
                     <% end %>
                  </div>
                <% elsif ( @visitor != nil && @visitor.save )%>
                        <% flash.each do |type, msg| %>
                          <div class="alert alert-success">
                           <%= msg %>
                          </div>
                        <% end %> 
		 <% else %>
			<% flash.each do |type, msg| %>
                          <div class="alert alert-success">
                           <%= msg %>
                          </div>
                        <% end %>
                 <% end %>
              </div>

	       <div class="form-row">
                 <div class="col-lg-12 form-group">
                   <%= form.label :email  %>
                   <%= form.text_field :email, class: "form-control", placeholder: "visitor@driptco.com"  %>
                 </div>
               </div
>
		<div class="form-row">
                 <div class="col-lg-12 form-group">
                   <%= form.label :city  %>
                   <%= form.text_field :city, class: "form-control", placeholder: "Philadelphia"  %>
                 </div>
               </div>             
	      <div class="form-row">
                 <div class="col-lg-12 form-group">
                   <%= form.label :state  %>
                   <%= form.text_field :state, class: "form-control", placeholder: "Pennsylvania"  %>
                 </div>
               </div>

              <div class="form-row">
                 <div class="col-lg-12 form-group">
		    <div> <%= recaptcha_tags theme: 'dark' %>  </div>
	            <div> <%= form.button "Subscribe", class: "btn btn-primary btn-dark btn-lg" %>    </div>
                 </div>
               </div>
           
	    <% end  %>
	</div>

      </div>
</div>
 </section>







